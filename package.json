{
  "name": "jobs-mcp-proxy",
  "version": "1.0.0",
  "description": "A lightweight MCP stdio proxy server that seamlessly forwards all client requests to a hosted Streamable HTTP MCP server for efficient AI toolchain integration",
  "keywords": [
    "mcp",
    "proxy",
    "stdio",
    "jobs",
    "ai-toolchain"
  ],
  "homepage": "https://github.com/bkbhub/jobs-mcp-proxy#readme",
  "bugs": {
    "url": "https://github.com/bkbhub/jobs-mcp-proxy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bkbhub/jobs-mcp-proxy.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "nodemon --exec \"node --import=tsx/esm src/index.ts\"",
    "dev:debug": "nodemon --exec \"node --inspect --import=tsx/esm src/index.ts\"",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "start": "node dist/src/index.js",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,jsonc}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.3",
    "mcp-proxy": "5.5.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "jsonc-eslint-parser": "^2.4.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.1",
    "prettier-plugin-packagejson": "^2.5.15",
    "tsc-alias": "1.8.8",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "engines": {
    "node": ">=22.17.0"
  }
}
